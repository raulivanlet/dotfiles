[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 99
low-at = 5
poll-interval = 5
use-actual-brightness = true
time-format = %H:%M
format-padding = 1
format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>
label-charging = %percentage%% Chg in %time% at %consumption%W
label-discharging = %percentage%% Disc in %time% at %consumption%W
label-full = %percentage%% Full



[module/date]
